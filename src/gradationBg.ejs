<script id="v-shader" type="x-shader/x-vertex">#version 300 es

  in vec2 aPosition;

  void main() {
    gl_Position = vec4(aPosition, 0.0, 1.0);
  }
</script>
<script id="f-shader" type="x-shader/x-fragment">#version 300 es
  precision mediump float;

  uniform vec2 uResolution;

  uniform float uScrollPosition;
  uniform vec2 uMousePosition;

  out vec4 outColor;

  void main() {
    vec2 uv = gl_FragCoord.xy / uResolution;
    outColor = vec4(uv.x, sin(uScrollPosition * 0.001), uMousePosition.y, 1.0);
  }
</script>
